

<p id="notice"><%= notice %></p>
<div style="background-color:green;width:50%;">
<h1>Yummy Khaana</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>User_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @khaana.each do |khaana| %>
      <tr>
        <td><%= khaana.title %></td>
        <td><%= khaana.description %></td>
        <td><%= khaana.user_id %></td>
        <td><%= link_to 'Show', khaana %></td>
        <td><%= link_to 'Edit', edit_khaana_path(khaana) %></td>
        <td><%= link_to 'Destroy', khaana, data: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
